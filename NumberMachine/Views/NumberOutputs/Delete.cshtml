<div>
    <h4>Output @Html.DisplayFor(model => model.ID)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Operation)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Operation)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Output)
        </dt>
        <dd>
